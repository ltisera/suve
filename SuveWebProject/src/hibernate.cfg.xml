<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >
<hibernate-configuration >
	<session-factory >
		<property name = "connection.driver_class" > com.mysql.jdbc.Driver </property >
		<property name = "connection.url" > jdbc:mysql://localhost:3306/BaseDatosSuve </property >
		<property name = "connection.username" > adminsuve </property >
		<property name = "connection.password" > 1234suve </property >
		<property name = "connection.pool_size" > 1 </property >
		<property name = "dialect" > org.hibernate.dialect.MySQLDialect </property >
		<property name = "show_sql" > true </property > <!-- en true muestra hql en consola -->
		<!-- Mapeo Entidades -->
			<mapping resource = "mapeos/Usuario.hbm.xml" />
			<mapping resource = "mapeos/Tarjeta.hbm.xml" />
			<mapping resource = "mapeos/Beneficio.hbm.xml" />
			<mapping resource = "mapeos/Transporte.hbm.xml" />
			<mapping resource = "mapeos/Estacion.hbm.xml" />
			<mapping resource = "mapeos/Movimiento.hbm.xml" />
			<!-- 
			<mapping resource = "mapeos/Boleto.hbm.xml" />
			 -->
		</session-factory >
</hibernate-configuration >